<div class="m-4 mx-auto p-5 mb-3 mt-5 ">
  <table class="table table-hover ">
    <thead>
      <tr>
        <th scope="col">Order No.</th>
        <th scope="col">Order Date</th>
        <th scope="col">Amount</th>
        <th scope="col">Shipping Status</th>
        <th scope="col">Payment Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <td>{{this.sn}}</td>
        <td>{{date this.createdAt}}</td>
        <td>NT$ {{this.amount}}</td>
        <td>{{getShippingStatus this.shipping_status}}</td>
        <td>{{getPayStatus this.payment_status}}</td>
        <td><a class="btn btn-success bg-gradient" href="/order/{{this.id}}" role="button">Details</a>
          {{#ifCond this.shipping_status '===' '0'}}
          <form action='/order/{{this.id}}/cancel' method="POST" style="display: inline;">
            <button class="btn btn-warning align-middle" type="submit">Cancel</button>
          </form>
          {{/ifCond}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>