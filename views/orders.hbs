<div class="m-4 mx-auto p-5 mb-3 mt-5 ">
  <table class="table table-hover ">
    <thead>
      <tr>
        <th scope="col">Order No.</th>
        <th scope="col">Order Date</th>
        <th scope="col">Amount</th>
        <th scope="col">Shipping Status</th>
        <th scope="col">Payment Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <td>{{this.sn}}</td>
        <td>{{date this.createdAt}}</td>
        <td>NT$ {{this.amount}}</td>
        {{#ifCond this.shipping_status '===' '-1' }}
        <td>Cancelled</td>
        {{/ifCond}}
        {{#ifCond this.shipping_status '===' '0' }}
        <td>Processing</td>
        {{/ifCond}}
        {{#ifCond this.shipping_status '===' '1' }}
        <td>Dispatched</td>
        {{/ifCond}}
        {{#ifCond this.shipping_status '===' '2' }}
        <td>Delivered</td>
        {{/ifCond}}

        {{#ifCond this.payment_status '===' '-1' }}
        <td>Unpaid</td>
        {{/ifCond}}
        {{#ifCond this.payment_status '===' '0' }}
        <td>Unpaid</td>
        {{/ifCond}}
        {{#ifCond this.payment_status '===' '1' }}
        <td>Paid</td>
        {{/ifCond}}
        <td><a class="btn btn-success bg-gradient" href="/order/{{this.id}}" role="button">Details</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>