<div class="m-4 mx-auto p-5 mb-3 mt-5 ">
  <table class="table table-hover ">
    <thead>
      <tr>
        <th scope="col">Order No.</th>
        <th scope="col">Order Date</th>
        <th scope="col">Amount</th>
        <th scope="col">Shipping Status</th>
        <th scope="col">Payment Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <td>{{this.sn}}</td>
        <td>{{date this.createdAt}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.shipping_status}}</td>
        <td>{{this.payment_status}}</td>
        <td><button type="button" class="btn btn-success bg-gradient">Details</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>