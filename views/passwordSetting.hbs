<div class="mt-5 mx-auto " style="max-width: 30%;">
  <h1 class="text-center mb-5"><i class="fas fa-key"></i> Reset password</h1>
  <p class="text-center text-black-50">Passwords must be at least 6 characters in length</p>

  {{>message}}

  <form action='/passwordSetting/{{user.id}}' method='POST'>
    <div class="mb-3 border-bottom border-secondary bg-light">
      <label for="inputEmail">Origin password</label>
      <input type="password" name="oldPassword" class="form-control form-control-lg border-0 bg-light" placeholder=""
        required autofocus>
    </div>

    <div class="mb-3 border-bottom border-secondary bg-light">
      <label for="newPassword">New password</label>
      <input type="password" name="newPassword" class="form-control form-control-lg border-0 bg-light" placeholder=""
        required autofocus>
    </div>

    <div class="mb-5 border-bottom border-secondary bg-light">
      <label for="newPassword">Confirm new password</label>
      <input type="password" name="newPasswordConfirm" class="form-control form-control-lg border-0 bg-light"
        placeholder="" required autofocus>
    </div>

    <div class="mb-2 text-end">
      <button type="submit" class="btn btn-primary bg-gradient">Save changes</button>
    </div>

  </form>

  <a href="/selfProfile/{{user.id}}"><i class="fas fa-angle-double-left"></i> Cancel and back</a>
</div>