<h1>Profile</h1>

<div class="">* : required </div>

<form action='/selfProfile/{{user.id}}' method='POST'>

  <label for="inputName">Name *</label>

  <input type="text" name="name" class="form-control" placeholder="" value={{user.name}} required autofocus>

  <label for="inputEmail">Email *</label>

  <input type="text" name="email" class="form-control" placeholder="" value={{user.email}} required autofocus>

  <label for="inputPasswordConfirm">phone</label>

  <input type="text" name="phone" class="form-control" placeholder="" value={{user.phone}}>

  <label for="inputPassword">Password *</label>

  <a href="/passwordSetting/{{user.id}}">set new password</a>

  <button type="submit" class="btn btn-primary">Save change</button>

</form>
<form action='/selfProfile/{{user.id}}'>
  <button type="submit" class="btn btn-primary">Cancel</button>
</form>