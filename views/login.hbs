<div class="mt-5 mx-auto " style="max-width: 30%;">
  <h1 class="text-center">Login</h1>
  <div class="mb-3">
    <form action='/login' method='POST'>
      <div class="mb-3 border-bottom border-secondary bg-light">
        <label for="inputEmail">Email</label>
        <input type="text" name="email" class="form-control form-control-lg border-0 bg-light" placeholder="" required
          autofocus>
      </div>
      <div class="mb-5">
        <div class="border-bottom border-secondary bg-light">
          <label for="inputPassword">Password</label>
          <input type="text" name="password" class="form-control form-control-lg border-0 bg-light" placeholder=""
            required autofocus>
        </div>
        <p class="text-black-50">Passwords must be at least 6 characters in length.</p>
      </div>
      <button type="submit" class="btn bg-success bg-gradient text-white w-100 p-2" style="font-size: 1.5em;">
        Login</button>
    </form>
  </div>
  <div class="mb-2 ">
    <form action='/auth/facebook'>
      <button type="submit" class="btn bg-primary bg-gradient text-white w-100 p-2" style="font-size: 1.5em;">Facebook
        login</button>
    </form>
  </div>

  <div class=" text-end" style="font-size: 1.5em">
    <a href="/register" class="text-success">Register</a>
  </div>

</div>